<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_access_time_black_24dp"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/clouds_and_sun_material"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/temperature_maximum"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/temperature_minimum"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/temperature_morning"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/temperature_day"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/barometer_material"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/humidity_material"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/cloudy_material"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/sunrise_material"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/sunset_material"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/weather_vane_material"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/windsock_material"
        app:tint="@color/colorIcons" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/umbrella_material"
        app:tint="@color/colorIcons" />

</LinearLayout>