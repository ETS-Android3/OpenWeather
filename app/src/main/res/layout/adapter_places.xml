<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_place"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true"
        android:backgroundTint="@color/colorBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="280dp"
            android:orientation="vertical"
            android:padding="20dp">

            <!--    Principal weather content     !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--    Place content     !-->

                    <TextView
                        android:id="@+id/city_adapter"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:maxHeight="50dp"
                        android:maxLines="3"
                        android:text="City"
                        android:textColor="@color/colorFirstText"
                        android:textSize="20sp"
                        android:isScrollContainer="false"/>

                    <TextView
                        android:id="@+id/country_adapter"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="Country"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="15sp"
                        android:isScrollContainer="false"/>


                    <!--    Temperature     !-->
                    <TextView
                        android:id="@+id/temperature_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="23°C"
                        android:textColor="@color/colorFirstText"
                        android:textSize="50sp" />

                    <!--    Feels Like Temperature     !-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/title_temperature_feelslike"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/temperature_feelslike_adapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21°C"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <!--    Weather description     !-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/weather_icon_adapter"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="end|top"
                        android:contentDescription="TODO"
                        android:src="@drawable/clouds_and_sun_flat"/>

                    <TextView
                        android:id="@+id/weather_description_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:text="Clear Sky"
                        android:textColor="@color/colorFirstText"
                        android:textSize="20sp"/>
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--    Wind    !-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/weather_vane_material"
                        app:tint="@color/colorIcons" />

                    <TextView
                        android:id="@+id/wind_direction_value"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:text="NW"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/windsock_material"
                        app:tint="@color/colorIcons" />

                    <TextView
                        android:id="@+id/wind_speed_value"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="10 km/h"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/wind_gust_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/wind_material"
                            app:tint="@color/colorIcons" />

                        <TextView
                            android:id="@+id/wind_gust_speed_value"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="20 km/h"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>
                <!--    Humidity, Pressure, Visibility  !-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/humidity_material"
                        app:tint="@color/colorIcons" />

                    <TextView
                        android:id="@+id/humidity_value"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/barometer_material"
                        app:tint="@color/colorIcons" />

                    <TextView
                        android:id="@+id/pressure_value"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="1000 hpa"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />


                    <LinearLayout
                        android:id="@+id/visibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/visibility_24dp"
                            app:tint="@color/colorIcons" />

                        <TextView
                            android:id="@+id/visibility_value"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="10 km"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <!--    Sunrise, Sunset, Cloudiness  !-->
                <LinearLayout
                    android:id="@+id/sky_informations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/sunrise_material"
                        app:tint="@color/colorIcons" />

                    <TextView
                        android:id="@+id/sunrise_value"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="06:15"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/sunset_material"
                        app:tint="@color/colorIcons" />

                    <TextView
                        android:id="@+id/sunset_value"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="20:15"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/cloudy_material"
                        app:tint="@color/colorIcons" />

                    <TextView
                        android:id="@+id/cloudiness_value"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="20%"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/detailed_informations"
                layout="@layout/adapter_places_detailed"
                android:visibility="gone"/>

            <include
                android:id="@+id/forecast"
                layout="@layout/adapter_places_forecast"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/last_update_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_last_update"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/last_update_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19/07/20 19:19"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>